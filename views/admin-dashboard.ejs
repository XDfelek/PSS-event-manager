<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel Administratora</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <div class="container py-5">
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/events">Wydarzenia</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            Panel Administratora
          </li>
        </ol>
      </nav>

      <h1 class="mb-4">Panel Administratora</h1>

      <!-- Display flash messages -->
      <% if (locals.error) { %>
      <div class="alert alert-danger" role="alert"><%= error %></div>
      <% } %> <% if (locals.success) { %>
      <div class="alert alert-success" role="alert"><%= success %></div>
      <% } %>

      <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Zarządzanie użytkownikami</h4>
        </div>
        <div class="card-body">
          <!-- User Search Form -->
          <form method="GET" action="/admin" class="mb-4">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                placeholder="Szukaj użytkownika (nazwa lub email)"
                name="search"
                value="<%= locals.search || '' %>"
              />
              <button class="btn btn-outline-primary" type="submit">
                Szukaj
              </button>
              <% if (locals.search) { %>
              <a href="/admin" class="btn btn-outline-secondary">Wyczyść</a>
              <% } %>
            </div>
          </form>

          <!-- Users Table -->
          <div class="table-responsive">
            <% if (users.length === 0) { %>
            <div class="alert alert-info">
              <% if (locals.search) { %> Nie znaleziono użytkowników pasujących
              do wyszukiwania: "<%= search %>" <% } else { %> Brak użytkowników
              w systemie <% } %>
            </div>
            <% } else { %>
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Nazwa użytkownika</th>
                  <th>Email</th>
                  <th>Rola</th>
                  <th>Data utworzenia</th>
                  <th>Akcje</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(user => { %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.username %></td>
                  <td><%= user.email %></td>
                  <td>
                    <% if (user.role === 'admin') { %>
                    <span class="badge bg-danger">Administrator</span>
                    <% } else { %>
                    <span class="badge bg-secondary">Użytkownik</span>
                    <% } %>
                  </td>
                  <td><%= new Date(user.created_at).toLocaleString() %></td>
                  <td>
                    <% if (user.role === 'admin') { %>
                    <form
                      action="/admin/remove-admin/<%= user.id %><%= locals.search ? '?search=' + search : '' %>"
                      method="POST"
                      class="d-inline"
                    >
                      <button
                        type="submit"
                        class="btn btn-sm btn-outline-danger"
                      >
                        Odbierz uprawnienia
                      </button>
                    </form>
                    <% } else { %>
                    <form
                      action="/admin/make-admin/<%= user.id %><%= locals.search ? '?search=' + search : '' %>"
                      method="POST"
                      class="d-inline"
                    >
                      <button
                        type="submit"
                        class="btn btn-sm btn-outline-primary"
                      >
                        Nadaj uprawnienia
                      </button>
                    </form>
                    <% } %> <% if (user.role !== 'admin' &&
                    user.deleted_posts_count > 0) { %>
                    <form
                      action="/admin/reset-deletions/<%= user.id %><%= locals.search ? '?search=' + search : '' %>"
                      method="POST"
                      class="d-inline"
                    >
                      <button
                        type="submit"
                        class="btn btn-sm btn-outline-secondary"
                      >
                        Reset usuniętych wydarzeń(<%= user.deleted_posts_count
                        %>)
                      </button>
                    </form>
                    <% } %>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
